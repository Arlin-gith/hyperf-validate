{
    "name": "yangjunlin/hyperf-validate",
    "description": "hyperf validate",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "arlin",
            "email": "961849634@qq.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.4",
        "hyperf/http-message": "~2.0.0",
        "hyperf/config": "~2.0.0",
        "hyperf/di": "~2.0.1",
        "hyperf/framework": "~2.0.0",
        "hyperf/utils": "~2.0.0",
        "ext-json": "*"
    },
    "suggest": {
        "ext-json": "Required to use JSON."
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "Arlin\\Validate\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
